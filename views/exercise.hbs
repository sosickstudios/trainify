{{>header}}

<div class="exercise-status">
    <div class="start-over"><button>Start Over</button></div>
    <h2>
        {{#if category}}
            {{category.name}}
        {{/if}}
        {{#unless category}}
            {{training.name}}
        {{/unless}}
    </h2>
    <div class="progress">
        <span class="progress-percent">0%</span>
        <svg class="progress-meter" version="1.1" x="0px" y="0px">
            <path id='p' fill="none"
                  stroke-dashoffset="-260"
                  stroke-dasharray="282 282"
                  stroke-width="8"
                  d="M45,4C22.392,4,4,22.393,4,45c0,22.608,18.392,41,41,41s41-18.392,41-41S67.608,4,45,4z"></path>
         </svg>
    </div>
    <div class="exercise-overview">
        <a href="{{dashlink}}">Go back to dashboard</a>
    </div>
</div>

<main class="exercise" data-exercise-id="{{this.exercise.id}}">
    <div class="review hidden">
        <div class="help-text">
            <span>Results</span>
            <p class="results-text"></p>
        </div>


        <div class="score">
            <span class="score-percent">0%</span>
            <svg class="score-meter" version="1.1" x="0px" y="0px">
                <path id='p-score' fill="none"
                      stroke-dashoffset="-260"
                      stroke-dasharray="282 282"
                      stroke-width="8"
                      d="M45,4C22.392,4,4,22.393,4,45c0,22.608,18.392,41,41,41s41-18.392,41-41S67.608,4,45,4z"></path>
             </svg>
             <h5>SCORE</h5>
             <div class="ratio">
                 <span class="correct"></span><br/>
                 ANSWERED CORRECTLY
             </div>
        </div>
    </div>

    <ul class="exercise-questions">
    {{#each questions}}
        <li class="exercise-question" data-question-id="{{this.id}}">
            <span class="question-text">{{this.text}}</span>
            <div class="review-icon"></div>
            <ul class="question-answers">
                {{#each this.answer.values}}
                <li data-answer-id="{{id}}" data-is-correct="{{isCorrect}}" class="question-answer">
                    <p class="answer-text">{{text}}</p>
                </li>
                {{/each}}
            </ul>
            <div class="explanation hidden">
                <h5>But Why?</h5>
                <p>{{this.explanation}}</p>
            </div>
        </li>
    {{/each}}
    </ul>

    <p class="legal">{{training.legal}}</p>
</main>

<script src="/scripts/headroom.min.js"></script>
<script type="text/javascript" src="scripts/dataset.js"></script>
<script type="text/javascript" src="scripts/exercise.js"></script>
{{>footer}}