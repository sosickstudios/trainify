{{>header}}

<div class="dash">
	{{! All information relating to the course. }}
	<div class="dash-courseinfo">
	  <div class="course">
	  	<span class="name">{{training.name}}</span><span class="remaining"></span><br/>
	  	<p class="description">{{training.description}}</p>
	  </div>
	  <div class="actions">
	  	<button class="generate-exam">Generate Simulated Exam</button>
	  </div>
	  <div class="provider">
	  	<span class="name">Provided By {{company.name}}</span><br/>
	  	<p class="bio">{{company.bio}}</p>
	  </div>
	</div>

	{{! Starburst }}
	<div id="starburst">
	  <div id="sequence"></div>
	  <div id="chart">
	    <div id="explanation" style="visibility: hidden;">
	      <span id="percentage"></span>&#37;<br/>
	      questions answered correctly.
	      <br/>
	      <button id="practiceButton">Practice <span id="buttonText"></span></button>
	    </div>
	  </div>
	</div>
</div>

<script type="text/javascript" src="scripts/d3.min.js"></script>
<script type="text/javascript" src="scripts/starburst.js"></script>
<script type="text/javascript" src="/api/stats/tree"></script>

