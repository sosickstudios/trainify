{{>header}}

<main class="dash">
    <ul class="dash-stats">
        <li class="exam-passcount">
            <span class="dash-text"></span>
            <span class="dash-explanation">Tests Passed</span>
        </li>
        <li class="exam-failcount">
            <span class="dash-text"></span>
            <span class="dash-explanation">Tests Failed</span>
        </li>
        <li class="exam-average">
            <span class="dash-text"></span>
            <span class="dash-explanation">Test Average</span>
        </li>
    </ul>

	<div class="dash-overview">
		{{! All information relating to the course. }}
		<div class="dash-courseinfo">
		  <div class="course">
		  	<span class="course-name"></span><span class="remaining"></span><br/>
		  	<p class="course-description"></p>
		  </div>
		  <div class="actions">
		  	<button class="generate-exam">Generate Simulated Exam</button>
		  </div>
		  <div>
		  	<span class="provider-name"></span><br/>
		  	<p class="provider-bio"></p>
		  </div>
		</div>

		{{! Starburst }}
		<div id="starburst">
		  <div id="sequence"></div>
		  <div id="chart">
		    <div id="explanation" style="visibility: hidden;">
		      <button id="practiceButton"><span id="percentage"></span><span id="buttonText"></span></button>
		    </div>
		  </div>
		</div>
	</div>
</main>

<script async type="text/javascript" src="scripts/dash.js"></script>
<script type="text/javascript" src="scripts/d3.min.js"></script>
<script async type="text/javascript" src="scripts/starburst.js"></script>

{{>footer}}

